# Pinned audio devices for dictation and TTS.
export DICTATION_SOURCE="alsa_input.usb-HP__Inc_HyperX_SoloCast-00.analog-stereo"
export AI_TTS_SINK="alsa_output.pci-0000_f1_00.1.hdmi-stereo"

# Push-to-talk STT provider: faster-whisper | openai | deepgram
export DICTATION_PROVIDER="${DICTATION_PROVIDER:-faster-whisper}"

# Local faster-whisper settings
export DICTATION_MODEL="${DICTATION_MODEL:-small.en}"
export DICTATION_DEVICE="${DICTATION_DEVICE:-cpu}"
export DICTATION_COMPUTE="${DICTATION_COMPUTE:-int8}"

